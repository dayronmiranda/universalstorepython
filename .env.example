# Application Settings
APP_NAME=JollyTienda API
DEBUG=true

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=jollytienda

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-long-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080
MAGIC_LINK_EXPIRE_MINUTES=15

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=noreply@jollytienda.com

# Notes:
# - Change all secrets and keys in production
# - For Gmail SMTP, use an App Password, not your regular password
# - Get Stripe keys from your Stripe Dashboard
# - JWT_SECRET should be a long, random string (generate with: openssl rand -hex 32)
